{
  "name": "wm-web-components",
  "version": "1.0.0",
  "description": "webmarkets web components",
  "scripts": {
    "build:sass-site": "sass  --no-source-map --style compressed src/assets/sass/styles.scss _site/assets/css/styles.css",
    "build:sass": "npm-run-all --parallel build:sass-site",
    "build:eleventy": "eleventy",
    "clean": "rm -rf _site/",
    "prebuild": "npm run clean",
    "build": "npm-run-all build:sass build:eleventy",
    "watch:sass": "sass  --no-source-map --watch src/assets/sass:_site/assets/css",
    "watch:eleventy": "eleventy --serve",
    "debug": "DEBUG=* npx eleventy",
    "prestart": "npm run clean",
    "start": "npm-run-all build:sass --parallel watch:*",
    "wc-clean": "rm -rf wc-build/",
    "wc-start": "vite --host",
    "wc-build": "npm run wc-clean && tsc && rollup -c",
    "deploy": "npm run build && npx netlify deploy --prod"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Webmarkets/wm-web-components"
  },
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-navigation": "^0.3.2",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^2.0.3",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@web/rollup-plugin-copy": "^0.3.0",
    "@web/rollup-plugin-html": "^1.8.0",
    "clean-css": "^4.2.1",
    "dotenv": "^8.2.0",
    "luxon": "^1.19.3",
    "markdown-it": "^10.0.0",
    "markdown-it-anchor": "^5.2.5",
    "rollup": "^2.52.8",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-multi-input": "^1.3.1",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "@material/mwc-button": "^0.21.0",
    "@material/mwc-drawer": "^0.21.0",
    "lit": "^2.0.0-rc.2",
    "sass": "^1.35.1",
    "typescript": "^3.9.10",
    "vite": "^2.4.1"
  }
}
